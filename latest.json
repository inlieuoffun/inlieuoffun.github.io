---
---
{
  "latest": {% assign ep = site.episodes | reverse | first -%}{
    "episode":{{ ep.episode | jsonify }},
    "airDate":{{ ep.date | date: "%Y-%m-%d" | jsonify }}
    {%- if ep.guests %},
    "guestNames":{{ ep.guests | map: "name" | jsonify }}{% endif %}
    {%- if ep.summary %},
    "summary":{{ ep.summary | strip | jsonify }}{% endif %}
    {%- if ep.topics %},
    "topics":{{ ep.topics | strip | jsonify }}{% endif %}
    {%- if ep.crowdcast %},
    "crowdcastURL":{{ ep.crowdcast | jsonify }}{% endif %}
    {%- if ep.youtube %},
    "youTubeURL":{{ ep.youtube | jsonify }}{% endif %}
    {%- if ep.links %},
    "links":[
      {% for link in ep.links -%}
      {"title":{{ link.title | jsonify }},"url":{{ link.url | jsonify -}}
      }{% unless forloop.last %},
      {% endunless %}
      {%- endfor %}
    ]{% endif %}
  }
}
